<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiluxiangbei.joey.haoqiusoccer.activity.TableMatchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_table_match"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="2dp"
        android:background="@color/colorPrimaryDark"
        app:title="对阵"
        app:titleTextColor="@color/textColorWhite"/>

    <ImageView
        android:layout_below="@+id/toolbar_table_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/chelsea_011"
        android:alpha="0.2"/>


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_below="@+id/toolbar_table_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="主场"
                android:textColor="@color/textColorDarkGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"

                android:text="客场"
                android:textColor="@color/textColorDarkGrey"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/img_team1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/arsenal"
                android:layout_marginRight="56dp"/>

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="@color/textColorNormal"
                android:textSize="18sp" />




            <ImageView
                android:id="@+id/img_team2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/hotspurs"
                android:layout_marginLeft="56dp"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_below="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/team1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="洛里昂"
                android:textColor="@color/textColorNormal"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="梅斯"
                android:textColor="@color/textColorNormal"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_below="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:text="比赛时间："/>


            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="12-14周日"
                android:gravity="center"
                android:textColor="@color/textColorNormal" />


            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3:00"
                android:layout_marginRight="16dp"
                android:textColor="@color/textColorNormal" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/video_card"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                card_view:cardBackgroundColor="#ff9800"
                card_view:cardCornerRadius="2dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp"
                card_view:cardMaxElevation="2dp" >

                <TextView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColorWhite"
                    android:text="视频直播"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/report_card"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                card_view:cardBackgroundColor="#009688"
                card_view:cardCornerRadius="2dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp"
                card_view:cardMaxElevation="2dp" >

                <TextView
                    android:id="@+id/report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="图文直播"
                    android:textColor="@color/textColorWhite"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>



        </LinearLayout>










    </RelativeLayout>


</RelativeLayout>
